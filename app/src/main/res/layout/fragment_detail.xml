<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:weightSum="10">
    <include
        layout="@layout/toolbar_detail"
        android:id="@+id/toolbar_detail"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="@dimen/detail_top_margin">
        <ImageView
            android:id="@+id/detail_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/detail_bottom_margin"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/itemlines"
            android:textSize="@dimen/detail_text"
            android:layout_marginBottom="@dimen/detail_bottom_margin"
            android:layout_marginTop="@dimen/detail_top_margin"
            android:layout_marginHorizontal="@dimen/detail_side_margin"
            />

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_text"
            android:background="@drawable/itemlines"
            android:maxLines="2"
            android:layout_marginBottom="@dimen/detail_bottom_margin"
            android:layout_marginTop="@dimen/detail_top_margin"
            android:layout_marginHorizontal="@dimen/detail_side_margin"
            />

        <TextView
            android:id="@+id/detail_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/itemlines"
            android:textSize="@dimen/detail_text"
            android:layout_marginBottom="@dimen/detail_bottom_margin"
            android:layout_marginHorizontal="@dimen/detail_side_margin"
            />

        <TextView
            android:id="@+id/detail_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/itemlines"
            android:textSize="@dimen/detail_text"
            android:layout_marginBottom="@dimen/detail_bottom_margin"
            android:layout_marginTop="@dimen/detail_top_margin"
            android:layout_marginHorizontal="@dimen/detail_side_margin"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="10"
        android:background="@drawable/itemlines"
        android:layout_marginHorizontal="@dimen/detail_side_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/detail_url"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:textSize="@dimen/detail_text"
             />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/detail_go_button"
            android:text="@string/detail_go_button"
            android:textSize="@dimen/detail_text"
            android:layout_weight="3"/>
    </LinearLayout>
</LinearLayout>